<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <bean id="cqlCluster" class="com.comcast.homesecurity.domain.cql.ClusterFactory" scope="singleton">
     <property name="disabled" value="${cassandra.disabled}"/>
     <property name="cassandraNodes" value="${cql.cassandraNodes}"/>
     <property name="connectTimeoutMillis" value="${cql.connectTimeoutMillis}"/>
     <property name="readTimeOutMillis" value="${cql.readTimeOutMillis}"/>
     <property name="coreConnectionPerLocalHost" value="${cql.coreConnectionPerLocalHost}"/>
     <property name="coreConnectionPerRemoteHost" value="${cql.coreConnectionPerRemoteHost}"/>
     <property name="maxConnectionPerLocalHost" value="${cql.maxConnectionPerLocalHost}"/>
     <property name="maxConnectionPerRemoteHost" value="${cql.maxConnectionPerRemoteHost}"/>
     <property name="keepAlive" value="${cql.keepAlive}"/>
     <property name="dataCenterName" value="${cql.datacenter.name}" />
     <property name="connectionRetryMs" value="${cql.connection.retry.ms}" />
  </bean>
  
  <bean id="homesecuritySession" class="com.comcast.homesecurity.domain.cql.SessionFactory" scope="singleton">
    <constructor-arg ref="cqlCluster"/>
    <constructor-arg value="${cassandra.keyspace.name}"/>
  </bean>

  <bean id="eventDao" class="com.comcast.homesecurity.domain.dao.EventDao" init-method="init" destroy-method="destroy">
  	<constructor-arg ref="homesecuritySession" />
    <property name="disabled" value="${cassandra.disabled}"/>
    <property name="maxCount" value="${event.maxCount}"></property>
    <property name="eventTtl" value="${event.ttl.sec}" />
  </bean>

</beans>
