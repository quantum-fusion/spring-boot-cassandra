/** DROP KEYSPACE homesecurity; */
/***********************************************************
 * create homesecurity keyspace with network topology strategy
 * and 2 replicates in 2 datacenters
***********************************************************/
 
CREATE KEYSPACE homesecurity
  WITH REPLICATION = { 'class' : 'SimpleStrategy', 'replication_factor' : 2};
  
  
USE homesecurity;

CREATE TABLE eventsByDate (
      eventDateTime bigint,
      eventId bigint,
      eventContent text,
      PRIMARY KEY (eventDateTime, eventId)
    ) WITH COMPACT STORAGE;


create table eventTimeline ( 
      siteId text, 
      time_taken text, 
      event text,  
      PRIMARY KEY (siteId, time_taken)
    ) WITH COMPACT STORAGE 
      AND CLUSTERING ORDER BY (time_taken DESC);        
    

    